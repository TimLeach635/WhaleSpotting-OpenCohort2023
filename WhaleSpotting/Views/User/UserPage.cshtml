@model WsUser

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.ProfileImageUrl" alt="Profile image for @Model.Name" class="img-fluid">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-md-8 extra-margin">
           <p> @Model.Bio</p> 
        </div>
    </div>
        
        
</div>

<h2>My Sightings.</h2>

<div>
    
        <ul>
            
                @foreach (var sighting in @Model.Sightings)
                {
                    <li class="card" style="width: 18rem">
                        <div class="card-body">
                            <h4 class="card-title">@sighting.Date</h4>
                            <p class="card-text"> Latitute: @sighting.Latitude Longitude: @sighting.Longitude</p>
                            <p class="card-text"> Description of Sighting:</p>
                            <p class="card-text"> @sighting.Description</p>
                        </div>
                    </li>
                }
            </div>
        </ul>
    
</div>
