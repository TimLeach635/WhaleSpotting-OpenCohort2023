@model WhaleSpotting.ViewModels.HomeViewModel
@{
ViewData["Title"] = "Home Page";
}

<div class="p-5 text-center bg-image rounded-3" style="
    background-image: url('https://static.independent.co.uk/s3fs-public/thumbnails/image/2020/08/03/11/istock-1183394497.jpg?quality=75&width=990&crop=3%3A2%2Csmart&auto=webp');
    height: 400px;
  ">
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="text-white">
        <h1 class="mb-3">Whale Spotting</h1>
      </div>
    </div>
  </div>
</div>
<main>
    <p class="container-fluid bg-2 text-center">
        Recently we have finally seen an increase in whale numbers across the globe due to conservation efforts, 
        and we would love to keep the public and scientific community engaged with these efforts. We have created 
        this website to help encourage and track whale spotting all across the world!
    </p>
</main>

@if (Model.LastWeekPhotos != null && Model.LastWeekPhotos.Count > 0)
{
    <ul>
        @foreach (var photo in Model.LastWeekPhotos)
        {
            <li>
                <img src="@photo.Image" alt='@(
                    photo.Sighting != null
                        ? $"Whale sighting on {photo.Sighting.Date}"
                        : "Whale sighting"
                )'>
            </li>
        }
    </ul>
}
